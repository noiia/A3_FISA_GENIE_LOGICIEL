<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AvaloniaApplication.ViewModels"
             xmlns:avaloniaApplication="clr-namespace:AvaloniaApplication"
             xmlns:views="clr-namespace:AvaloniaApplication.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApplication.Views.HomeView"
             x:DataType="vm:HomeViewModel">
     <Grid Margin="0,0,0,50">
        <TextBlock Text="EasySave" FontSize="30" Margin="32,24,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TabControl Margin="32,80,32,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TabItem Header="Savejobs">
                <Grid Margin="16">
                    <TextBlock Text="Savejob" FontSize="24" Margin="0,0,0,20"/>
                    <DataGrid ItemsSource="{Binding TableData}"
                              AutoGenerateColumns="False"
                              IsReadOnly="False"
                              Height="250" 
                              Margin="10"
                              GridLinesVisibility="All"
                              BorderThickness="1" 
                              BorderBrush="Gray">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="100" />
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="300"/>
                            <DataGridTextColumn Header="Last Execution" Binding="{Binding LastExec}" Width="200"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="200"/>
                            <DataGridCheckBoxColumn Header="Exec" Binding="{Binding Exec}" Width="100"/>
                            <DataGridCheckBoxColumn Header="Delete" Binding="{Binding Delete}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Add Savejob">
               <views:AddSaveJobView/>
            </TabItem>
            <TabItem Header="Settings">
                <views:SettingsView />
            </TabItem>
        </TabControl>

        <Border Margin="32,128,32,32" BorderThickness="1">
        </Border>
    </Grid>
</UserControl>
