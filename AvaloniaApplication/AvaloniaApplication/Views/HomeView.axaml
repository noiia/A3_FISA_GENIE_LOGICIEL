<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AvaloniaApplication.ViewModels"
             xmlns:avaloniaApplication="clr-namespace:AvaloniaApplication"
             xmlns:views="clr-namespace:AvaloniaApplication.Views"
             xmlns:controls="clr-namespace:Avalonia.Notification.Controls;assembly=Notification.Avalonia"
             x:Class="AvaloniaApplication.Views.HomeView"
             x:DataType="vm:ParentHomeSettingsViewModel">
     <Grid Margin="0,0,0,50">
         <Border Grid.Column="1">
             <controls:NotificationMessageContainer Manager="{Binding HomeVM.Manager}" />
         </Border>
         <TextBlock Text="EasySave.exe" xml:space="preserve" FontSize="30" Margin="48,24,0,48" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TabControl Margin="32,124,32,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectedIndex="{Binding HomeVM.SelectedTabIndex, Mode=TwoWay}">
            <TabItem Header="Home">
                <Grid Margin="16">
                    <TextBlock Text="{Binding HomeVM.Title}" FontSize="24" Margin="0,0,0,0"/>
                    <DataGrid ItemsSource="{Binding HomeVM.TableData}"
                              AutoGenerateColumns="False"
                              IsReadOnly="False"
                              Height="300" 
                              GridLinesVisibility="All"
                              BorderThickness="1" 
                              BorderBrush="Gray">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="100" IsReadOnly="True"/>
                            <DataGridTextColumn Header="{Binding SettingsVM.Translations.NameTranslate}" Binding="{Binding Name}" Width="300" IsReadOnly="True"/>
                            <DataGridTextColumn Header="{Binding SettingsVM.Translations.LastExecution}" Binding="{Binding LastExec}" Width="200" IsReadOnly="True"/>
                            <DataGridTextColumn Header="{Binding SettingsVM.Translations.Status}" Binding="{Binding Status}" Width="200" IsReadOnly="True"/>
                            <DataGridTextColumn Header="{Binding SettingsVM.Translations.Type}" Binding="{Binding Type}" Width="100" IsReadOnly="True"/>
                            <DataGridTemplateColumn Header="Execute" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding ExeSaveJob}" CommandParameter="{Binding Id}"
                                                HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="avares://AvaloniaApplication/Assets/gear.png" Width="20" Height="20"/>
                                            </StackPanel>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>   
                            <DataGridTemplateColumn Header="Delete" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding DelSaveJob}" CommandParameter="{Binding Id}" 
                                                HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="avares://AvaloniaApplication/Assets/trash.png" Width="20" Height="20"/>
                                            </StackPanel>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>                        
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Add Savejob">
               <views:AddSaveJobView/>
            </TabItem>
            <TabItem Header="Settings">
                <views:SettingsView />
            </TabItem>
        </TabControl>

        <Border Margin="32,128,32,32" BorderThickness="1">
        </Border>
    </Grid>
</UserControl>
