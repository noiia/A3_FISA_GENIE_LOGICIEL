<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AvaloniaApplication.Views.AddSaveJobView">
    <Grid Margin="16">
        <StackPanel Spacing="16">
            <TextBlock Text="Add Savejob" FontSize="24" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBox Watermark="Name" Width="300"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBox Watermark="Source Path" Width="300"/>
                <Button Content="Browse..." Width="100"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBox Watermark="Destination Path" Width="300"/>
                <Button Content="Browse..." Width="100"/>
            </StackPanel>

            <Button Content="Confirm" HorizontalAlignment="Right" Width="100"/>
        </StackPanel>
    </Grid>
</UserControl>
