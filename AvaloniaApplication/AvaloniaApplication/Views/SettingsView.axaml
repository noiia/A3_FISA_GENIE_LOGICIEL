<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AvaloniaApplication.ViewModels"
             mc:Ignorable="d"
             x:Class="AvaloniaApplication.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">
    <UserControl.DataContext>
        <vm:SettingsViewModel />
    </UserControl.DataContext>
    <StackPanel>
        <Grid Margin="16">
            <StackPanel Spacing="16">
                <TextBlock Text="Settings" FontSize="24" Margin="0,0,0,20"/>
                <ComboBox PlaceholderText="Select Language" Width="300"
                          SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}">
                    <ComboBoxItem Content="English"/>
                    <ComboBoxItem Content="French"/>
                </ComboBox>
                <ComboBox PlaceholderText="Select Log Type" Width="300"
                          SelectedItem="{Binding SelectedLogType, Mode=TwoWay}">
                    <ComboBoxItem Content="XML"/>
                    <ComboBoxItem Content="JSON"/>
                </ComboBox>

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBox Watermark="Set Log Path" Width="300"
                             Text="{Binding LogPath, Mode=TwoWay}"/>
                    <Button Content="Browse..." Width="100"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBox Watermark="File Type to Encrypt" Width="300"
                             Text="{Binding FileTypeToEncrypt, Mode=TwoWay}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBox Watermark="Business Applications Blocking SJ" Width="300"
                             Text="{Binding BusinessApplicationsBlockingSJ, Mode=TwoWay}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>