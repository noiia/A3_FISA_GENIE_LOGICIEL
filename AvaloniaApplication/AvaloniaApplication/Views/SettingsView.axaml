<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AvaloniaApplication.ViewModels"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             mc:Ignorable="d"
             x:Class="AvaloniaApplication.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">
    <UserControl.DataContext>
        <vm:SettingsViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="0">
            <StackPanel>
                <Grid Margin="16">
                    <StackPanel Spacing="16">
                        <TextBlock Text="{Binding SettingsTitle}" FontSize="24" Margin="0,0,0,20"/>
                        <TextBlock Text="{Binding SelectLanguageTitle}" FontSize="18" Margin="0,0,0,10"/>
                        <ComboBox PlaceholderText="{Binding SelectLanguagePlaceholder}" Width="500"
                                  SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}">
                            <system:String>English</system:String>
                            <system:String>French</system:String>
                        </ComboBox>
                        <TextBlock Text="{Binding SelectLogTypeTitle}" FontSize="18" Margin="0,0,0,10"/>
                        <ComboBox PlaceholderText="{Binding SelectLogTypePlaceholder}" Width="500"
                                  SelectedItem="{Binding SelectedLogType, Mode=TwoWay}">
                            <system:String>XML</system:String>
                            <system:String>JSON</system:String>
                        </ComboBox>
                        <TextBlock Text="{Binding SetLogPathTitle}" FontSize="18" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBox Watermark="{Binding SetLogPathWatermark}" Width="500"
                                     Text="{Binding LogPath, Mode=TwoWay}"/>
                            <Button Content="{Binding BrowseButton}" Width="100" Click="OnBrowseButtonClicked"/>
                            <Button Content="{Binding ResetButton}" Width="100" Click="OnResetButtonClicked"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Spacing="10">
                            <TextBlock Text="{Binding FileTypesToEncryptTitle}" FontSize="18" Margin="0,0,0,10"/>
                            <ListBox HorizontalAlignment="Left" ItemsSource="{Binding FileTypesToEncrypt}" Width="500" Height="120" Name="FileTypesListBox"/>
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBox Watermark="{Binding AddFileTypeWatermark}" Width="350" Text="{Binding NewFileTypeToEncrypt, Mode=TwoWay}"/>
                                <Button Content="{Binding AddButton}" Width="100" Click="OnAddFileTypeButtonClicked"/>
                                <Button Content="{Binding RemoveSelectedButton}" Width="200" Click="OnRemoveFileTypeButtonClicked"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Spacing="10">
                            <TextBlock Text="{Binding BusinessAppBlockingTitle}" FontSize="18" Margin="0,0,0,10"/>
                            <ListBox HorizontalAlignment="Left" ItemsSource="{Binding BusinessApp}" Width="500" Height="120" Name="BusinessAppListBox"/>
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBox Watermark="{Binding AddBusinessAppWatermark}" Width="350" Text="{Binding NewBusinessApp, Mode=TwoWay}"/>
                                <Button Content="{Binding AddButton}" Width="100" Click="OnAddBusinessAppButtonClicked"/>
                                <Button Content="{Binding RemoveSelectedButton}" Width="200" Click="OnRemoveBusinessAppButtonClicked"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBlock Text="{Binding SetEncryptionKeyTitle}" FontSize="18" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBox Watermark="{Binding EnterEncryptionKeyWatermark}" Width="500"
                                     Text="{Binding CryptKey, Mode=TwoWay}"/>
                            <Button Content="{Binding UpdateKeyButton}" Width="100" Click="OnUpdateCryptKeyButtonClicked"/>
                        </StackPanel>

                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
